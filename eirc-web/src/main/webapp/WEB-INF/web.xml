<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <context-param>
        <param-name>configuration</param-name>
        <param-value>development</param-value>
<!--        <param-value>deployment</param-value>  -->
    </context-param>

    <servlet>
        <servlet-name>rest</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>ru.flexpay.eirc.payments_communication.service</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>rest</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>wicket</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>ru.flexpay.eirc.web.EircWebApplication</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>wicket</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <security-role>
        <role-name>AUTHORIZED</role-name>
    </security-role>
    <security-role>
        <role-name>INFO_PANEL_ALLOWED</role-name>
    </security-role>
    <security-role>
        <role-name>ADMIN_MODULE_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>ADDRESS_MODULE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>ADDRESS_MODULE_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>APARTMENT_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>ROOM_EDIT</role-name>
    </security-role>
    
    <security-role>
        <role-name>ORGANIZATION_MODULE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>ORGANIZATION_MODULE_EDIT</role-name>
    </security-role>

    <security-role>
        <role-name>PERSON_MODULE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>PERSON_MODULE_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>PERSON_MODULE_DESCRIPTION_EDIT</role-name>
    </security-role>
    <security-role>
        <role-name>CHILD_ORGANIZATION_VIEW</role-name>
    </security-role>
    
    <security-role>
        <role-name>REFERENCE_DATA_MODULE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>REFERENCE_DATA_MODULE_EDIT</role-name>
    </security-role>

    <security-role>
        <role-name>MODULE_INSTANCE_VIEW</role-name>
    </security-role>
    <security-role>
        <role-name>MODULE_INSTANCE_EDIT</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>eircRealm</realm-name>
        <form-login-config>
            <form-login-page>/fake_login_resource.html</form-login-page>
            <form-error-page>/fake_login_resource.html</form-error-page>
        </form-login-config>
    </login-config>

    <!--security-constraint>
        <web-resource-collection>
            <web-resource-name>resources</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>AUTHORIZED</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint-->
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
